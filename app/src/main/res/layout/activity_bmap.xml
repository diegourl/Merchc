<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ift3150.merchc.BMapActivity"
    android:background="#ff000000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="\u25C0 island "
            android:id="@+id/toIsland"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/rectangular_button_background"
            android:textColor="@color/text_colour"
            android:textAllCaps="false"
            android:onClick="goToIsland"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Island"
            android:id="@+id/islandName"
            android:textColor="#ffffffff"
            android:gravity="center_horizontal"
            android:layout_weight="5" />


    </LinearLayout>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="24"
        android:id="@+id/fragment_container"></RelativeLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="4"
        android:background="#ff000000">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="weight"
            android:gravity="center_horizontal"
            android:id="@+id/statsWeight"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="volume"
            android:id="@+id/statsVolume"
            android:textColor="#ffffffff"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="money doe"
            android:id="@+id/statsMoney"
            android:textStyle="bold"
            android:textColor="#ffffffff"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="food"
            android:id="@+id/statsFood"
            android:textColor="#ffffffff"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="repair"
            android:id="@+id/statsRepair"
            android:textColor="#ffffffff"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="speed"
            android:id="@+id/statsSpeed"
            android:textColor="#ffffffff"/>

    </LinearLayout>

</LinearLayout>
