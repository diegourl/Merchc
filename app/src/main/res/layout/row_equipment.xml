<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:id="@+id/equipmentImage"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type"
            android:id="@+id/equipmentType"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="w kg"
            android:id="@+id/equipmentWeight"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="#777777" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v l"
            android:id="@+id/equipmentVolume"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="#777777" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price$"
            android:id="@+id/equipmentPrice"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="#ffffffff"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="+"
            android:id="@+id/equipmentBAddToBoat"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="@drawable/rectangular_button_background"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onboat"
            android:id="@+id/equipmentBoatAmount"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/equipmentAmountSeparator"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="#ffbbbbbb"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onisland"
            android:id="@+id/equipmentIslandAmount"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="-"
            android:id="@+id/equipmentBAddToIsland"
            android:textColor="#ffffffff"
            android:background="@drawable/rectangular_button_background"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>


</LinearLayout>